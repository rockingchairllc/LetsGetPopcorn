 <div class="header">
     		<h1 class="title"><% if user_signed_in? %> Welcome, <%= current_user.first_name %> <%= current_user.last_name %> <% else %> <% end %></h1>
         	<div class="logo"></div>
           <ul class="nav">
             	<li><a href="javascript:void(0)">matches</a></li>
                 <li><a href="/movies" <% if @title == 'movies' %> class="active_button" <% end %>>movies</a></li>
                 <li><a href="/user/account" <% if @title == 'account' %> class="active_button" <% end %> >account</a></li>
             </ul><!-- .nav -->

             <!-- clear the float -->
             <div class="clearfloat"></div>
         </div><!-- .header -->
  <div class="section">
        <div class="article profile">
        	
            <h2 class="headshots">Forgot your password?</h2><br>

            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=>'form',:id=>'forg_pass' }) do |f| %>
              <%= devise_error_messages! %>

              <p class="text_box">*<%= f.label :email %></p>
              <p class="text_box1"><%= f.email_field :login %></p>
              <div class="clearfloat"></div>

              <p style="margin:10px 0 0 160px;"><%= f.submit "Reset Password", :class=>'input-submit' %></p>
              <% end %>

              <p style="margin:10px 0 0 188px;"><%= render :partial => "devise/shared/links" %></p>

     </div><!-- article -->
      <!-- END Aritcle -->
  </div><!-- .section -->