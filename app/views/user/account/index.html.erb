<div class="section">
    
    
    
    <div class="articlenew profile">
      <div style="margin-left: 140px;">
    	<h2 class="headshots">Head Shots!</h2>
    	
        <p class="headshot_msg">
        	Now it's time to fil in your profile with details about your glamorous life.  
        	(Don't worry, it won't go on Imdb!)
        </p><!-- .headshot_msg -->
       </div> 
        <h3>The highlight reel</h3>
       
        <ul class="profile_pics">
          <% @albums.each do |album| %>
      	      <li id="pp1"><%= link_to image_tag(album.photo.url(:thumb)), edit_user_album_path(album) %></li>
      	      
      	  <% end %>
      	
        	
        </ul><!-- .profile_pics -->
        <%= link_to "Upload", {:controller=>"albums", :action=>'new'}, :class=>"button_to" %>
        
        
        <h3>The Synopsis</h3>
        
      
        <% if @synopse.nil? %>
            <%= link_to "Add", {:controller=>"synopses", :action=>'new'}, :class=>"button_to" %>
       	    
       	<% else %>
       	    <%= @synopse.title %>
       	    <%= link_to "Edit", {:controller=>"synopses", :action=>'edit', :id=>@synopse.id}, :class=>"button_to" %>
       	    
       	<% end %>
        
        <h3>Favorite movie of all time</h3>
        
         <% if @favmovie.nil? %>
              <%= link_to "Add", {:controller=>"favmovies", :action=>'new'}, :class=>"button_to" %>    
         	<% else %>
         	    '<%= @favmovie.title %>'
         	    <%= link_to "Edit", {:controller=>"favmovies", :action=>'edit', :id=>@favmovie.id}, :class=>"button_to" %>
         	<% end %>
        
        <h3>Funny Question</h3>
       
        
        <% if @funnyque.nil? %>
            <%= link_to "Add", {:controller=>"funnyques", :action=>'new'}, :class=>"button_to" %>
       	<% else %>
       	    <%= @funnyque.title %>
       	    <%= link_to "Edit", {:controller=>"funnyques", :action=>'edit', :id=>@funnyque.id}, :class=>"button_to" %>
       	    
       	<% end %>
        
        
