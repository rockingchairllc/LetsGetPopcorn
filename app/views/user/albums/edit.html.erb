<div class="header">
    		<h1 class="title"><% if user_signed_in? %> Welcome, <%= current_user.first_name %> <%= current_user.last_name %> <% else %> <% end %></h1>
        	<div class="logo"></div>
          <ul class="nav">
            	<li><a href="/matches">matches</a></li>
                <li><a href="/movies" <% if @title == 'movies' %> class="active_button" <% end %>>movies</a></li>
                <li><a href="/user/account" <% if @title == 'account' %> class="active_button" <% end %> >account</a></li>
            </ul><!-- .nav -->
            
            <!-- clear the float -->
            <div class="clearfloat"></div>
        </div><!-- .header -->
  <div class="section"> 
      <div class="article profile">
      	<h2 class="headshots">Edit Photo </h2><br>

	      <% form_for [:user, @album],:html => { :multipart => true, :class=>'form', :id=>'edit_photo' } do |f| %>
	        
	        <%- @album.errors.full_messages.each do |message| -%>
	          <div class="errorExplanation"> <p><%= message %></p></div>
	        <%- end -%>
	   
	        
	        
	        <p class="text_box"><%= f.label :photo %></p>
	        <p class="text_box1"><%= f.file_field :photo %></p>
	        <div class="clearfloat"></div>
	        <p class="text_box1"><%= image_tag @album.photo.url(:thumb) %></p>
	
	        <p class="button"> <button class="button positive" type="submit"> Save </button>
    	      <%= link_to "Cancel", onclick="javascript:history.back()", :class => 'button negative' %>
    	    </p>

        <% end %>

        </div><!-- article -->
        <!-- END Aritcle -->
    </div><!-- .section -->